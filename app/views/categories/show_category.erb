<h2><%= @category.title %></h2>

<form action="/categories/<%=@category.id%>/delete" method="POST">
	<input id="hidden" type="hidden" name="_method" value="delete">
	<button type="submit"> Delete </button>
</form>

<a href="/categories/<%=@category.id%>/edit"> Edit </a> </br></br>

<a href="/categories">Back to Category List</a>

<h4>Upload Image</h4>
<form action="/uploads" method="POST" enctype="multipart/form-data">
	<input type="hidden" name="category_id" value="<%=@category.id%>" />
	<input type="file" name="file">
	<input type="submit" value="Upload">
</form>


<% @category.uploads.each do |category_upload| %>

	<img src="/uploads/<%= category_upload.image_url %>" />

<% end %>

